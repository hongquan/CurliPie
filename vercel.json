{
    "version": 2,
    "public": true,
    "builds": [
        { "src": "/api/public/**", "use": "@vercel/static"},
        { "src": "/api/main.py", "use": "@vercel/python"}
    ],
    "routes": [
        {"src": "/api/", "dest": "/api/main.py"},
        {"src": "/openapi.json", "dest": "/api/main.py"},
        {"src": "/docs", "dest": "/api/main.py"},
        {"src": "/redoc", "dest": "/api/main.py"},
        {"src": "/(.*)", "dest": "/api/public/$1"}
    ]
}
